<div class="row">
  <h1>Galleries</h1>
  <table id="gallery-list">
  	<% @galleries.each do |gallery| %>
      <tr>
      	<td>
          <a class="gallery-name" href="<%= gallery_path(:id => gallery.id) %>">
            <%= gallery.name %>
          </a>
        </td>
        <td>   
          <a href="<%= edit_gallery_path(:id => gallery.id) %>" class="btn btn-mini">
		    <i class="icon-edit "></i>
              Edit
          </a>
        </td>
        <td>
          <a class="btn btn-mini btn-delete" confirm="Вы уверены?" data-method="delete" href="<%= gallery_path(:id => gallery.id) %>" data-remote=true>
            <i class="icon-trash"></i>
              Delete
          </a>
        </td>
      </tr>
    <% end %>
  </table>

  <%= link_to 'New', new_gallery_path, :class => 'btn btn-mini' %>
</div>
